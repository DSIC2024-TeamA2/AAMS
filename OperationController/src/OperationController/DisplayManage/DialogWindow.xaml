<Window x:Class="OperationController.DisplayManage.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OperationController.DisplayManage"
        mc:Ignorable="d"
        Title="DialogWindow" Height="300" Width="250">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="DialogImage" Width="200" Height="200" Stretch="Uniform" />
            <TextBlock x:Name="DialogText" FontSize="16" Margin="5" TextAlignment="Center" />
            <Button Content="닫기" Click="OnCloseButtonClick" />
        </StackPanel>
    </Grid>
</Window>
